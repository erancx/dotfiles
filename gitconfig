[alias]
	co = checkout
	add-commit = !git add -A && git commit
	d = difftool
[apply]
	whitespace = nowarn
[color]
    branch = auto
    diff = auto
    status = auto
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
	whitespace = trailing-space,space-before-tab
	editor = nvim
    pager = delta
[push]
	default = current
[pull]
	rebase = true
[branch]
	autosetuprebase = always
	autosetupmerge = always
[pager]
	show = nvim -c '%sm/\\e.\\{-}m//g' -c 'set ft=diff' +1 -
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[user]
	name = Eran Davidovich
	email = erandav@google.com
[difftool]
	prompt = false
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	verbose = true

[interactive]
    diffFilter = delta --color-only

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
	side-by-side = true

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true

[interactive]
    diffFilter = delta --color-only
