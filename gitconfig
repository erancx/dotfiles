[user]
  name = Eran Davidovich
  email = eran@eran.com
[init]
	defaultBranch = main
[alias]
  co = checkout
  ac = !git add -A && git commit
  d = difftool
[core]
  whitespace = trailing-space,space-before-tab
  editor = nvim
  pager = delta
[apply]
  whitespace = nowarn
[push]
  default = current
[pull]
  rebase = true
[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red bold
  new = green bold
  commit = yellow bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetuprebase = always
  autosetupmerge = always
[pager]
  show = delta
  log = delta
  reflog = delta
  diff = delta
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[commit]
  verbose = true
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
  line-numbers = true
  side-by-side = false
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
